---
import GitHub from "../icons/GitHub.astro"
import LinkedIn from "../icons/LinkedIn.astro"
import Moon from "../icons/Moon.astro"
import Sun from "../icons/Sun.astro"
---

<div
  class='block sticky pointer-events-none bg-base-200 justify-center h-12 [mask-image:linear-gradient(transparent,#000000)]'
>
</div>

<div
  class='sticky flex items-center self-center justify-center gap-6 pt-1 social-icons bottom-8 bg-base-200'
>
  <label for='theme-controller' class='swap swap-rotate'>
    <input
      id='theme-controller'
      type='checkbox'
      class='theme-controller'
      value='light'
    />
    <Sun class='size-8 swap-off' />
    <Moon class='size-7 swap-on' />
  </label>
  <a
    href='https://github.com/xSharkhy'
    target='_blank'
    class='mx-3'
    aria-label='Github'
    title='Github'
  >
    <GitHub class='size-6' />
  </a>
  <a
    href='https://www.linkedin.com/in/ismobla'
    target='_blank'
    class='mx-3'
    aria-label='Linkedin'
    title='Linkedin'
  >
    <LinkedIn class='size-6' />
  </a>
</div>
