---
import { Image } from "astro:assets"

const { sideBarActiveItemID } = Astro.props
const activeClass = "bg-base-300"
---

<div class='z-40 drawer-side'>
  <label for='my-drawer' class='drawer-overlay'></label>
  <aside
    class='px-2 pt-2 h-auto min-h-full w-[19rem] bg-base-200 text-base-content flex flex-col'
  >
    <div class='mx-auto mt-5 mb-6 w-fit'>
      <a href='https://www.linkedin.com/in/ismobla'>
        <div
          class='avatar transition ease-in-out hover:scale-[102%] block m-auto'
        >
          <div class='w-[8.5rem]'>
            <Image
              class='mask mask-circle'
              format='webp'
              width={300}
              height={300}
              src='/profile.webp'
              alt='Fotografía de Ismael Morejón'
            />
          </div>
        </div>
      </a>
    </div>
    <ul class='overflow-y-auto menu grow shrink menu-md'>
      <li><a class='py-3 text-base' id='inicio' href='/'>Inicio</a></li>
      <li>
        <a class='py-3 text-base' id='proyectos' href='/proyectos'>Proyectos</a>
      </li>
      <li>
        <a class='py-3 text-base' id='experiencia' href='/experiencia'>CV</a>
      </li>
      <li>
        <a
          class='py-3 text-base'
          href='mailto:ismamoreblas@gmail.com'
          target='_blank'
          referrerpolicy='no-referrer-when-downgrade'>Contacto</a
        >
      </li>
    </ul>

    <script
      define:vars={{
        sideBarActiveItemID: sideBarActiveItemID,
        activeClass: activeClass,
      }}
    >
      const activeItemElem = document.getElementById(sideBarActiveItemID)
      activeItemElem && activeItemElem.classList.add(activeClass)
    </script>
  </aside>
</div>
