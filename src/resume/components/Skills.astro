---
import Section from "@/resume/Section.astro"

import {
  AstroIcon,
  CSS,
  Git,
  GitHub,
  HTML,
  JavaScript,
  MongoDB,
  MySQL,
  Python,
  React,
  Tailwind,
} from "@/resume/icons"

import { SKILLS } from "@/utils/consts"

const SKILLS_ICONS = {
  Astro: AstroIcon,
  CSS,
  Git,
  GitHub,
  HTML,
  JavaScript,
  MongoDB,
  MySQL,
  Python,
  React,
  Tailwind,
}
---

<Section title='Habilidades'>
  <ul class='inline-flex flex-wrap gap-2 mt-2'>
    {
      SKILLS.map(({ name }) => {
        const Icon = SKILLS_ICONS[name]

        return (
          <li class='flex items-center gap-1 px-3 py-1 text-sm font-medium rounded-md hover:scale-105 text-stone-950 bg-stone-300'>
            {Icon && <Icon class='size-3' />} <span>{name}</span>
          </li>
        )
      })
    }
  </ul>
</Section>
