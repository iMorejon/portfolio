---
import Section from "@/resume/Section.astro"

import { EDUCATION_ES } from "@/utils/consts"
---

<Section title='EducaciÃ³n'>
  <ul class='flex flex-col gap-8'>
    {
      EDUCATION_ES.map(
        ({ institution, startDate, endDate, studyType, area }) => {
          const startYear = new Date(startDate).getFullYear()
          const endYear =
            endDate !== null ? new Date(endDate).getFullYear() : "Actual"
          const years = `${startYear} - ${endYear}`

          return (
            <li>
              <article>
                <header class='flex items-start justify-between mb-1'>
                  <div>
                    <h3>{institution}</h3>
                  </div>

                  <time class='text-sm text-gray-500 md:text-right min-w-28'>
                    {years}
                  </time>
                </header>

                <footer>
                  <p>{`${studyType} - ${area}`}</p>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>
